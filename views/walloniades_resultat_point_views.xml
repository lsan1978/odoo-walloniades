<?xml version="1.0"?>
<odoo>
    <!-- Actions -->



    <!-- Walloniades RÃ©sultat Point Views -->

    <!--List View-->

    <record id="walloniades_resultat_point_tree_view" model="ir.ui.view">
        <field name="name">walloniades.resultat.point.list.view</field>
        <field name="model">walloniades.resultat.point</field>
        <field name="arch" type="xml">
            <list editable="bottom" string="Res_point">
                <field name="sequence" widget="handle"/>
                <field name="equipe_instance_id" readonly="1"/>
                <!--<field name="epreuve_instance_id" readonly="1"/>-->
                <field name="points" widget="integer" class="o_input_spinbox"/>
            </list>

        </field>
    </record>

    <!--Form View-->

    <record id="walloniades_resultat_point_form_view" model="ir.ui.view">
        <field name="name">walloniades.resultat.point.form.view</field>
        <field name="model">walloniades.resultat.point</field>
        <field name="arch" type="xml">
            <form string="Epreuve">
                <sheet>
                    <group>
                        <field name="equipe_instance_id"/>
                        <field name="points" widget="integer" class="o_input_spinbox"/>
                        <field name="points_set" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Search View -->



</odoo>